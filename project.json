{
  "name": "revelio",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx serve worker",
            "prefix": "[bot]"
          },
          {
            "command": "npx -y -p localtunnel lt --port 3000 -s revelio",
            "prefix": "[bot-proxy]"
          },
          {
            "command": "docker-compose up",
            "prefix": "[docker-compose]"
          },
          {
            "command": "nx dev jobs",
            "prefix": "[jobs]"
          }
        ],
        "parallel": true
      }
    },
    "bind:webhook": {
      "command": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/src/bind-webhook.ts",
      "envFile": ".env"
    },
    "stripe:fixtures": {
      "command": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/src/stripe-fixtures.ts",
      "envFile": ".env"
    },
    "bot:logout": {
      "command": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/src/logout.ts",
      "envFile": ".env"
    }
  }
}
