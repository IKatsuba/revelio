{
  "name": "revelio",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx dev web",
            "prefix": "[bot]"
          },
          {
            "command": "npx -y -p smee-client smee -u $BOT_WEBHOOK_URL -p 3000 -P /api/tg/webhook",
            "prefix": "[bot-proxy]"
          },
          {
            "command": "npx -y -p smee-client smee -u https://smee.ktsb.io/revelio-stripe -p 3000 -P /api/stripe/webhook",
            "prefix": "[stripe-proxy]"
          },
          {
            "command": "docker-compose up",
            "prefix": "[docker-compose]"
          },
          {
            "command": "nx dev jobs",
            "prefix": "[jobs]"
          }
        ],
        "parallel": true
      }
    },
    "bind:webhook": {
      "command": "tsx ./scripts/bind-webhook.ts",
      "envFile": ".env"
    },
    "stripe:fixtures": {
      "command": "tsx ./scripts/stripe-fixtures.ts",
      "envFile": ".env"
    }
  }
}
